{
    "name": "berlinonline/dat0r",
    "bin": ["bin/generate_code.php", "bin/dat0r_make.sh"],
    "type": "library",
    "description": "Library for generating data-objects.",
    "keywords": ["data mapper", "scaffolding"],
    "homepage": "https://github.com/berlinonline/Dat0r",
    "license": "MIT",
    "authors": [
        {
            "name": "Thorsten Schmitt-Rink"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.3",
        "twig/twig": "1.*",
        "phpunit/phpunit": "3.7.*",
        "phpdocumentor/phpdocumentor": "2.*"
    },
    "autoload": { 
        "psr-0": {"Dat0r" : "src/" }
    },
    "scripts": {
        "post-install-cmd": "Dat0r\\Composer\\PhpDocumentorInstallScript::fixAssets",
        "post-update-cmd": "Dat0r\\Composer\\PhpDocumentorInstallScript::fixAssets"
    }
}
